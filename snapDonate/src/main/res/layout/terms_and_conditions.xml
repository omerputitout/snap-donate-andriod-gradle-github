<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="77.1" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70.8"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90.9"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.6" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="83.3"
                android:orientation="vertical"
                android:weightSum="70.8" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5" />

                <TextView
                    android:id="@+id/termsAndConditionsTextView"
                    style="@style/_60px"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.6"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/tab_selected" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="62.7"
                    android:overScrollMode="never"
                    android:paddingBottom="10dp"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/termsAndConditionsDescriptionTextView"
                            style="@style/_48px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoLink="all"
                            android:linksClickable="true"
                            android:text="@string/terms_and_conditions_description"
                            android:textColor="@color/tab_selected"
                            android:textColorLink="@color/tab_selected" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.0" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6" />

</LinearLayout>