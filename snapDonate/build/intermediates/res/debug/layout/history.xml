        android:layout_height="0dp"
        android:layout_weight="70.7"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90.9"
            android:orientation="vertical"
            android:weightSum="70.7" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.2"
                android:orientation="horizontal"
                android:weightSum="90.9" >

                <TextView
                    android:id="@+id/todoTextView"
                    style="@style/_48px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="21.4"
                    android:background="#f5f5f5"
                    android:gravity="center"
                    android:text="@string/to_do"
                    android:textColor="@color/tab_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8" />

                <TextView
                    android:id="@+id/historyTextView"
                    style="@style/_48px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="24.6"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="@string/history"
                    android:textColor="@color/tab_selected" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="65.5"
                android:background="@android:color/white"
                android:contentDescription="main content"
                android:orientation="vertical"
                android:weightSum="65.5" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="19.4"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="86.4"
                        android:orientation="vertical"
                        android:weightSum="19.4" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.2" />

                        <TextView
                            android:id="@+id/descriptionTextView"
                            style="@style/_48px"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="16.2"
                            android:gravity="left"
                            android:text="@string/history_description_text"
                            android:textColor="@color/tab_selected" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/gridview_bg" />

                <ListView
                    android:id="@+id/historyListView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="33.2"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@drawable/gridview_bg"
                    android:dividerHeight="1dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" >
                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12.8"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9.0"
                        android:orientation="horizontal" >

