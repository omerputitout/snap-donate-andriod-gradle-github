<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/snapCameraLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="96" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.8"
            android:background="@drawable/headerbg"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4.6" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="46.9"
                android:orientation="vertical"
                android:weightSum="7.8" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.6" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.4"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="35.6" />

            <LinearLayout
                android:id="@+id/snapMoreMenuLinearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.1"
                android:orientation="vertical"
                android:weightSum="7.8" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.6"
                    android:scaleType="centerInside"
                    android:src="@drawable/moreactive" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.0" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4.7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11.2"
            android:background="@color/background"
            android:orientation="vertical"
            android:weightSum="11.2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10.7"
                android:background="@drawable/menu_bg"
                android:contentDescription="Tabs"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="17.2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12.3"
                    android:contentDescription="Camera tab"
                    android:orientation="vertical"
                    android:weightSum="10.7" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4" />

                    <ImageView
                        android:id="@+id/snapTabSnapImageView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.4"
                        android:scaleType="centerInside"
                        android:src="@drawable/snapactive" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6" />

                    <TextView
                        android:id="@+id/snapTabSnapTextView"
                        style="@style/_32px"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.3"
                        android:gravity="center|top"
                        android:text="@string/snap"
                        android:textColor="@color/tab_selected" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7.5" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/menu_seperater" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="8.2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.6"
                    android:contentDescription="todo tab"
                    android:orientation="vertical"
                    android:weightSum="10.7" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.8" />

                    <ImageView
                        android:id="@+id/snapTabTodoImageView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.8"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:src="@drawable/todonormal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7" />

                    <TextView
                        android:id="@+id/snapTabTodoTextView"
                        style="@style/_32px"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.4"
                        android:gravity="top|center"
                        android:text="@string/to_do"
                        android:textColor="@color/tab_normal" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6.3" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/menu_seperater" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7.0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="13.1"
                    android:contentDescription="FAQs tab"
                    android:orientation="vertical"
                    android:weightSum="10.7" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3" />

                    <ImageView
                        android:id="@+id/snapTabFaqsImageView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.5"
                        android:scaleType="centerInside"
                        android:src="@drawable/faqsnormal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6" />

                    <TextView
                        android:id="@+id/snapTabFaqsTextView"
                        style="@style/_32px"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.3"
                        android:gravity="center|top"
                        android:text="@string/faqs"
                        android:textColor="@color/tab_normal" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="17.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="17.5" />

                <ImageView
                    android:id="@+id/snapTabSnapBarImageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="11.5"
                    android:scaleType="centerInside"
                    android:src="@drawable/snapstrip" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="16.4" />

                <ImageView
                    android:id="@+id/snapTabTodoBarImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.4"
                    android:scaleType="centerInside"
                    android:src="@drawable/todostrip"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="15.1" />

                <ImageView
                    android:id="@+id/snapTabFaqsBarImageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="13.1"
                    android:scaleType="centerInside"
                    android:src="@drawable/faqsstrip"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="17.6" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14.5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/snapFitTheCharityLogoTextView"
                style="@style/_48px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fit_the_charity_logo"
                android:textColor="@color/purple" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="37.7" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="83.1"
                    android:background="@drawable/frame" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.8" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/snapLoadingIndicator"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11.8"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.3"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100" >

            <Button
                android:id="@+id/snapNotSnappingTapHereButton"
                style="@style/_48px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="84.1"
                android:background="@drawable/notshopping"
                android:singleLine="true"
                android:text="@string/not_snaping"
                android:textColor="@android:color/white"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.8"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/snapTabTodoCounterImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/counterbg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/snapTabTodoCounterTextView"
        style="@style/_32px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="gone" />

