<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="11.2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.7"
        android:background="@drawable/menu_bg"
        android:contentDescription="Tabs"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7.0" />

        <LinearLayout
            android:id="@+id/tabFaqsLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13.1"
            android:contentDescription="FAQs tab"
            android:orientation="vertical"
            android:weightSum="10.7" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3" />

            <ImageView
                android:id="@+id/faqImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:scaleType="centerInside"
                android:src="@drawable/faqsnormal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" />

            <TextView
                android:id="@+id/faqTextView"
                style="@style/_32px"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.3"
                android:gravity="center|top"
                android:text="@string/faqs"
                android:textColor="@color/tab_normal" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="17.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7.0" />

        <ImageView
            android:id="@+id/faqBarImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13.1"
            android:scaleType="centerInside"
            android:src="@drawable/faqsstrip"
            android:visibility="invisible" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="17.6" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/Android%20Studio%20Workspace/snap-donate-andriod-github/snapDonate/src/main/res/layout/tab_indicator_faqd_layout.xml -->