<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="77.1" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="59.7"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.4"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90.9"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.6" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="77.6"
                android:orientation="vertical"
                android:weightSum="59.7" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.6"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/whatIsSnapDonateTextView"
                    style="@style/_60px"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6.7"
                    android:text="@string/what_is_snapdonate"
                    android:textColor="@color/tab_selected" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="51.4"
                    android:overScrollMode="never"
                    android:paddingBottom="10dp"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/whatIsSnapeDonateDescriptionTextView"
                            style="@style/_48px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="all"
                            android:linksClickable="true"
                            android:text="@string/about_text"
                            android:textColor="@color/tab_selected"
                            android:textColorLink="@color/tab_selected" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.7" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13.7"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            tools:ignore="NestedWeights" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.9"
            android:contentDescription="@string/app_description"
            android:scaleType="centerInside"
            android:src="@drawable/snapfooter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/Android%20Studio%20Workspace/snap-donate-andriod-github/snapDonate/src/main/res/layout/about.xml -->